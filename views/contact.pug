extends layout.pug 

block script 
  script(src='../public/script.js')

block style 
  style 
    include ../public/style.css  
    include ../public/contact_style.css  

block body
  div.container  
    h1 Contact Us 
    form(action="/contact",method="post",class="Form")
        input(type="text",name="name",class="Input",required,placeholder="Enter your name")
        input(type="text",name="email",class="Input",required,placeholder="Enter your Email")
        input(type="text",name="phone",class="Input",required,placeholder="Enter your Phone Number")
        input(type="text",name="address",class="Input",required,placeholder="Enter your Address")
        button(type="submit",id="btn") Submit 